+// isWindowsDarkMode 检测 Windows 是否为深色模式
+func isWindowsDarkMode() bool {
+	if runtime.GOOS != "windows" {
+		return false
+	}
+
+	// 读取注册表检测主题
+	k, err := registry.OpenKey(registry.CURRENT_USER,
+		`Software\Microsoft\Windows\CurrentVersion\Themes\Personalize`,
+		registry.QUERY_VALUE)
+	if err != nil {
+		slog.Warn("Failed to open registry key for theme detection", slog.String("error", err.Error()))
+		return false
+	}
+	defer k.Close()
+
+	// Win10/11: 检测任务栏主题
+	// SystemUsesLightTheme - 控制任务栏颜色（优先使用）
+	// AppsUseLightTheme - 控制应用窗口颜色（备用）
+	// 值：0 = 深色模式, 1 = 浅色模式
+	
+	sysVal, _, sysErr := k.GetIntegerValue("SystemUsesLightTheme")
+	appsVal, _, appsErr := k.GetIntegerValue("AppsUseLightTheme")
+	
+	// 优先使用 SystemUsesLightTheme（任务栏主题）
+	if sysErr == nil {
+		isDark := sysVal == 0
+		slog.Info("Taskbar theme detected via SystemUsesLightTheme", 
+			slog.Uint64("value", sysVal), 
+			slog.Bool("isDark", isDark))
+		return isDark
+	}
+	
+	// 备用方案：使用 AppsUseLightTheme
+	if appsErr == nil {
+		isDark := appsVal == 0
+		slog.Info("Theme detected via AppsUseLightTheme (fallback)", 
+			slog.Uint64("value", appsVal), 
+			slog.Bool("isDark", isDark))
+		return isDark
+	}
+	
+	// 两个都读取失败
+	slog.Warn("Both theme values unavailable, defaulting to light mode",
+		slog.String("sysError", sysErr.Error()),
+		slog.String("appsError", appsErr.Error()))
+	return false
+}
+
+// adjustTaskbarLyricSize 调整任务栏歌词字体大小
+func adjustTaskbarLyricSize(delta int) {
+	if setConfigProc == nil {
+		return
+	}
+
+	taskbarLyricMutex.Lock()
+	currentFontSize += delta
+	if currentFontSize < 10 {
+		currentFontSize = 10
+	} else if currentFontSize > 48 {
+		currentFontSize = 48
+	}
+	newSize := currentFontSize
+	taskbarLyricMutex.Unlock()
+
+	setLyricStyle := func(key, value string) {
+		keyPtr, _ := syscall.BytePtrFromString(key)
+		valPtr, _ := syscall.BytePtrFromString(value)
+		setConfigProc.Call(uintptr(unsafe.Pointer(keyPtr)), uintptr(unsafe.Pointer(valPtr)))
+	}
+
+	setLyricStyle("size_primary", strconv.Itoa(newSize))
+	// 副歌词按比例调整
+	secondarySize := int(float64(newSize) * 0.65)
+	if secondarySize < 10 {
+		secondarySize = 10
+	}
+	setLyricStyle("size_secondary", strconv.Itoa(secondarySize))
+
+	slog.Info("Taskbar lyric size adjusted",
+		slog.Int("primarySize", newSize),
+		slog.Int("secondarySize", secondarySize))
+
+	// 保存配置到文件
+	saveTaskbarLyricSizeToConfig(newSize, secondarySize)
+}
+
+// saveTaskbarLyricSizeToConfig 保存任务栏歌词字体大小到配置文件
+func saveTaskbarLyricSizeToConfig(primarySize, secondarySize int) {
+	configPath := app.ConfigFilePath()
+	if configPath == "" {
+		slog.Warn("Config file path is empty, cannot save")
+		return
+	}
+
+	// 读取现有配置文件
+	content, err := os.ReadFile(configPath)
+	if err != nil {
+		slog.Warn("Failed to read config file", slog.String("error", err.Error()))
+		return
+	}
+
+	lines := strings.Split(string(content), "\n")
+	var newLines []string
+	var inTaskbarSection bool
+	primaryUpdated := false
+	secondaryUpdated := false
+
+	for _, line := range lines {
+		trimmed := strings.TrimSpace(line)
+		
+		// 检测是否进入 [main.taskbarLyric] 部分
+		if strings.HasPrefix(trimmed, "[main.taskbarLyric") || trimmed == "[main.taskbarLyric]" {
+			inTaskbarSection = true
+			newLines = append(newLines, line)
+			continue
+		}
+		
+		// 检测是否离开当前section（进入新的section）
+		if strings.HasPrefix(trimmed, "[") && inTaskbarSection {
+			// 如果还没更新，在section结束前添加
+			if inTaskbarSection && !primaryUpdated {
+				newLines = append(newLines, fmt.Sprintf("sizePrimary = %d", primarySize))
+				primaryUpdated = true
