+// sendLyricBySetConfig 通过 DLL SetConfig 函数发送歌词
+func sendLyricBySetConfig(content, transContent string) {
+	if setConfigProc == nil {
+		return
+	}
+
+	// 设置主歌词 - 使用 UTF-8 编码的 C 字符串
+	if content != "" {
+		keyPtr, _ := syscall.BytePtrFromString("lyric_primary")
+		valPtr, _ := syscall.BytePtrFromString(content)
+		_, _, _ = setConfigProc.Call(uintptr(unsafe.Pointer(keyPtr)), uintptr(unsafe.Pointer(valPtr)))
+	}
+
+	// 设置副歌词（翻译/转录）- 使用 UTF-8 编码的 C 字符串
+	if transContent != "" {
+		keyPtr, _ := syscall.BytePtrFromString("lyric_secondary")
+		valPtr, _ := syscall.BytePtrFromString(transContent)
+		_, _, _ = setConfigProc.Call(uintptr(unsafe.Pointer(keyPtr)), uintptr(unsafe.Pointer(valPtr)))
+	}
+}
