+// ==================== DLL Integration for Lyrics Display ====================
+var (
+	dllHandle         syscall.Handle
+	setConfigProc     *syscall.Proc
+	currentFontSize   int = 20
+	taskbarLyricMutex sync.Mutex
+)
+
+// getDLLPath 获取 native.dll 的绝对路径（与可执行文件同目录）
+func getDLLPath() string {
+	exe, err := os.Executable()
+	if err != nil {
+		slog.Warn("Failed to get executable path, using relative path", slog.Any("error", err))
+		return "native.dll"
+	}
+
+	// 解析符号链接，获取真实的可执行文件路径
+	realExe, err := filepath.EvalSymlinks(exe)
+	if err != nil {
+		slog.Warn("Failed to resolve symlink, using original path",
+			slog.String("exe", exe),
+			slog.Any("error", err))
+		realExe = exe
+	}
+
+	// 获取可执行文件所在目录
+	exeDir := filepath.Dir(realExe)
+	dllPath := filepath.Join(exeDir, "native.dll")
+
+	// 添加调试日志
+	slog.Debug("DLL path resolution",
+		slog.String("executable", exe),
+		slog.String("real_executable", realExe),
+		slog.String("exe_dir", exeDir),
+		slog.String("dll_path", dllPath))
+
+	return dllPath
+}
+
+// initLyricsPlugin 初始化歌词显示 DLL 插件
+func initLyricsPlugin() {
+	// 仅在 Windows 平台上加载
+	if runtime.GOOS != "windows" {
+		return
+	}
+
+	// 检查是否启用任务栏歌词
+	if !configs.AppConfig.Main.Lyric.Taskbar.Enable {
+		slog.Info("Taskbar lyrics disabled in config")
+		return
+	}
+
+	// 获取可执行文件所在目录的绝对路径
+	dllPath := getDLLPath()
+	slog.Info("Attempting to load DLL", slog.String("path", dllPath))
+
+	// 检查 DLL 文件是否存在
+	if stat, err := os.Stat(dllPath); os.IsNotExist(err) {
+		slog.Warn("native.dll does not exist at expected path",
+			slog.String("path", dllPath),
+			slog.String("hint", "Make sure native.dll is in the same directory as musicfox.exe"))
+		return
+	} else if err != nil {
+		slog.Warn("Failed to stat native.dll", slog.Any("error", err))
+		return
+	} else {
+		slog.Debug("DLL file found",
+			slog.String("path", dllPath),
+			slog.Int64("size", stat.Size()))
+	}
+
+	dll, err := syscall.LoadDLL(dllPath)
+	if err != nil {
+		slog.Warn("Failed to load native.dll",
+			slog.Any("error", err),
+			slog.String("hint", "This may be caused by missing dependencies (DirectX, Visual C++ Redistributable, etc.). The DLL requires: d3d11.dll, d2d1.dll, dwrite.dll, dxgi.dll, dcomp.dll, dwmapi.dll, UIAutomationCore.dll"))
+		return
+	}
+
+	// 获取 SetConfig 函数
+	proc, err := dll.FindProc("SetConfig")
+	if err != nil {
+		slog.Warn("Failed to find SetConfig in native.dll", slog.Any("error", err))
+		return
+	}
+
+	dllHandle = dll.Handle
+	setConfigProc = proc
+	slog.Info("Lyrics display plugin loaded successfully")
+
+	// 应用配置
+	applyTaskbarLyricConfig()
+}
+
+// applyTaskbarLyricConfig 应用任务栏歌词配置
+func applyTaskbarLyricConfig() {
+	if setConfigProc == nil {
+		return
+	}
+
+	cfg := configs.AppConfig.Main.Lyric.Taskbar
+
+	setLyricStyle := func(key, value string) {
+		keyPtr, _ := syscall.BytePtrFromString(key)
+		valPtr, _ := syscall.BytePtrFromString(value)
+		setConfigProc.Call(uintptr(unsafe.Pointer(keyPtr)), uintptr(unsafe.Pointer(valPtr)))
+	}
+
+	// 通用设置
+	setLyricStyle("font_family", cfg.FontFamily)
+	setLyricStyle("window_alignment", strconv.Itoa(cfg.WindowAlignment))
+	setLyricStyle("margin_left", strconv.Itoa(cfg.MarginLeft))
+	setLyricStyle("margin_right", strconv.Itoa(cfg.MarginRight))
+	setLyricStyle("line_spacing", strconv.Itoa(cfg.LineSpacing))
+
+	// 颜色处理：跟随系统主题或使用自定义颜色
+	var primaryColor, secondaryColor uint32
+	
+	slog.Info("Taskbar lyric theme settings",
+		slog.Bool("followSystemTheme", cfg.FollowSystemTheme),
+		slog.String("configColorPrimary", fmt.Sprintf("0x%08X", cfg.ColorPrimary)),
+		slog.String("configColorSecondary", fmt.Sprintf("0x%08X", cfg.ColorSecondary)))
+	
+	if cfg.FollowSystemTheme {
+		// 检测 Windows 主题
+		isDark := isWindowsDarkMode()
+		if isDark {
+			primaryColor = 0xFFFFFFFF   // 深色模式：白色
+			secondaryColor = 0xFFCCCCCC // 深色模式：亮灰色（更清晰）
+		} else {
+			primaryColor = 0xFF000000   // 浅色模式：黑色
+			secondaryColor = 0xFF666666 // 浅色模式：深灰
+		}
+		slog.Info("Using system theme colors",
+			slog.Bool("darkMode", isDark),
+			slog.String("primaryColor", fmt.Sprintf("0x%08X", primaryColor)),
+			slog.String("secondaryColor", fmt.Sprintf("0x%08X", secondaryColor)))
+	} else {
+		primaryColor = cfg.ColorPrimary
+		secondaryColor = cfg.ColorSecondary
+		slog.Info("Using custom colors (followSystemTheme is false)",
+			slog.String("primaryColor", fmt.Sprintf("0x%08X", primaryColor)),
+			slog.String("secondaryColor", fmt.Sprintf("0x%08X", secondaryColor)))
+	}
+
+	// 主歌词设置
+	taskbarLyricMutex.Lock()
+	currentFontSize = cfg.SizePrimary
+	taskbarLyricMutex.Unlock()
+
+	setLyricStyle("size_primary", strconv.Itoa(cfg.SizePrimary))
+	setLyricStyle("color_primary", fmt.Sprintf("0x%08X", primaryColor))
+	setLyricStyle("weight_primary", strconv.Itoa(cfg.WeightPrimary))
+	setLyricStyle("align_primary", strconv.Itoa(cfg.AlignPrimary))
