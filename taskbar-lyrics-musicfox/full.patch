+// getDLLPath 获取 native.dll 的绝对路径（与可执行文件同目录）
+func getDLLPath() string {
+	exe, err := os.Executable()
+	if err != nil {
+		slog.Warn("Failed to get executable path, using relative path", slog.Any("error", err))
+		return "native.dll"
+	}
+
+	// 解析符号链接，获取真实的可执行文件路径
+	realExe, err := filepath.EvalSymlinks(exe)
+	if err != nil {
+		slog.Warn("Failed to resolve symlink, using original path",
+			slog.String("exe", exe),
+			slog.Any("error", err))
+		realExe = exe
+	}
+
+	// 获取可执行文件所在目录
+	exeDir := filepath.Dir(realExe)
+	dllPath := filepath.Join(exeDir, "native.dll")
+
+	// 添加调试日志
+	slog.Debug("DLL path resolution",
+		slog.String("executable", exe),
+		slog.String("real_executable", realExe),
+		slog.String("exe_dir", exeDir),
+		slog.String("dll_path", dllPath))
+
+	return dllPath
+}
+
+// initLyricsPlugin 初始化歌词显示 DLL 插件
+func initLyricsPlugin() {
+	// 仅在 Windows 平台上加载
+	if runtime.GOOS != "windows" {
+		return
+	}
+
+	// 获取可执行文件所在目录的绝对路径
+	dllPath := getDLLPath()
+	slog.Info("Attempting to load DLL", slog.String("path", dllPath))
+
+	// 检查 DLL 文件是否存在
+	if stat, err := os.Stat(dllPath); os.IsNotExist(err) {
+		slog.Warn("native.dll does not exist at expected path",
+			slog.String("path", dllPath),
+			slog.String("hint", "Make sure native.dll is in the same directory as musicfox.exe"))
+		return
+	} else if err != nil {
+		slog.Warn("Failed to stat native.dll", slog.Any("error", err))
+		return
+	} else {
+		slog.Debug("DLL file found",
+			slog.String("path", dllPath),
+			slog.Int64("size", stat.Size()))
+	}
+
+	dll, err := syscall.LoadDLL(dllPath)
+	if err != nil {
+		slog.Warn("Failed to load native.dll",
+			slog.Any("error", err),
+			slog.String("hint", "This may be caused by missing dependencies (DirectX, Visual C++ Redistributable, etc.). The DLL requires: d3d11.dll, d2d1.dll, dwrite.dll, dxgi.dll, dcomp.dll, dwmapi.dll, UIAutomationCore.dll"))
+		return
+	}
+
+	// 获取 SetConfig 函数
+	proc, err := dll.FindProc("SetConfig")
+	if err != nil {
+		slog.Warn("Failed to find SetConfig in native.dll", slog.Any("error", err))
+		return
